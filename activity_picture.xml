<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:id="@+id/search_container_before"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangle_shape_search">

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/time"
                />

            <ImageView
                android:id="@+id/circle_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="170dp"
                android:src="@drawable/circle_all"
                />

            <ImageView
                android:id="@+id/wifi_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="305dp"
                app:tint="@color/black"
                android:src="@drawable/wifi"
                />

            <ImageView
                android:id="@+id/power_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="320dp"
                app:tint="@color/black"
                android:src="@drawable/power"
                />

            <ImageView
                android:id="@+id/battery_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="340dp"
                app:tint="@color/black"
                android:src="@drawable/battery"
                />
        </RelativeLayout>

    </LinearLayout>

    <!-- First Row: Search box + right icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:id="@+id/search_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangle_shape_search">

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/search_search"
                />

            <TextView
                android:id="@+id/search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/search_icon"
                android:text="search"
                android:textColor="#FF8B4513"
                android:textSize="30sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/right_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/right_above_search" />
    </LinearLayout>

    <!-- Second Row: Five Boxes Horizontally -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <!-- Shop -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_rectangle_search">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Shop"
                android:textColor="#FF8B4513"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Cycle -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_rectangle_search">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Cycle"
                android:textColor="#FF8B4513"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Sports -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_rectangle_search">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sports"
                android:textColor="#FF8B4513"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Auto -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_rectangle_search">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Auto"
                android:textColor="#FF8B4513"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Music -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_rectangle_search">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Music"
                android:textColor="#FF8B4513"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Last Row: Main Image -->
    <ImageView
        android:id="@+id/main_img_search"
        android:layout_width="match_parent"
        android:layout_height="487dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_img_search" />

    <!-- Bottom Icons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="center">

        <ImageView
            android:id="@+id/home_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/home_search"
            app:tint="@color/brownish_orange" />

        <ImageView
            android:id="@+id/below_search_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/below_search_search"
            app:tint="@color/brownish_orange" />

        <ImageView
            android:id="@+id/below_plus_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/below_plus_search"
            app:tint="@color/brownish_orange" />

        <ImageView
            android:id="@+id/dil_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/dil_search"
            app:tint="@color/brownish_orange" />

        <ImageView
            android:id="@+id/below_pic_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/below_pic_search"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/below_line_search"
        app:tint="@color/brownish_orange"
        android:adjustViewBounds="true" />

</LinearLayout>
