<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:id="@+id/search_container_before"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangle_shape_search">

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/time"
                />

            <ImageView
                android:id="@+id/circle_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="170dp"
                android:src="@drawable/circle_all"
                />

            <ImageView
                android:id="@+id/wifi_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="305dp"
                app:tint="@color/black"
                android:src="@drawable/wifi"
                />

            <ImageView
                android:id="@+id/power_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="320dp"
                app:tint="@color/black"
                android:src="@drawable/power"
                />

            <ImageView
                android:id="@+id/battery_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="340dp"
                app:tint="@color/black"
                android:src="@drawable/battery"
                />
        </RelativeLayout>
    </LinearLayout>

   <!--  2nd row  -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <!-- First Image - Positioned with margins -->
        <ImageView
            android:id="@+id/image_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"

            android:layout_marginStart="10dp"
            android:contentDescription="First image"
            android:scaleType="centerCrop"
            android:src="@drawable/search_search" />

        <TextView
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="120dp"
            android:layout_toEndOf="@id/image_1"
            android:text="Socially"
            android:textColor="#FF8B4513"
            android:textSize="20sp" />

        <!-- Second Image - Positioned to the right of first image -->
        <ImageView
            android:id="@+id/image_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="270dp"
            android:layout_toEndOf="@id/image_1"
            android:contentDescription="Second image"
            android:scaleType="centerCrop"
            android:src="@drawable/search_search" />

        <!-- Third Image - Positioned to the right of second image -->
        <ImageView
            android:id="@+id/image_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@id/image_2"
            android:contentDescription="Third image"
            android:scaleType="centerCrop"
            android:src="@drawable/search_search" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="#CCCCCC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

         <ImageView
            android:id="@+id/profile1_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/intro_introduction" />

        <ImageView
            android:id="@+id/profile2_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/profile1_image"
            android:src="@drawable/intro_introduction" />

        <ImageView
            android:id="@+id/profile3_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="42dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/profile2_image"
            android:src="@drawable/intro_introduction" />

        <ImageView
            android:id="@+id/profile4_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/profile3_image"
            android:src="@drawable/intro_introduction" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:padding="2dp">

        <TextView
            android:id="@+id/name1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="Your story"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/name2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_toEndOf="@id/name1_text"
            android:text="karenne"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/name3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_toEndOf="@id/name2_text"
            android:text="zackjohn"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/name4_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@id/name3_text"
            android:text="kieron_d"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="#CCCCCC" />

    <!-- -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/circle_white"
        android:orientation="horizontal"
        android:padding="6dp">

        <!-- Profile Image (Circle) -->

        <!-- Message Content -->

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/intro_introduction" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Username -->
            <TextView
                android:id="@+id/username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="joshua_l"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Message Text -->
            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Tokyo,Japan"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Timestamp -->
        <ImageView
            android:id="@+id/camera5_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/camera_signup"
            app:tint="@color/light_red" />
    </LinearLayout>

    <!-- below_image -->

    <ImageView
        android:id="@+id/main_img_home"
        android:layout_width="412dp"
        android:layout_height="294dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_img_home" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/profile5_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/intro_introduction" />

        <ImageView
            android:id="@+id/profile6_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@id/profile5_image"
            android:src="@drawable/intro_introduction" />

        <ImageView
            android:id="@+id/profile7_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@id/profile6_image"
            android:src="@drawable/intro_introduction" />

        <!-- dots -->
        <ImageView
            android:id="@+id/profile9_image"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="60dp"
            android:layout_toEndOf="@id/profile7_image"
            android:src="@drawable/circle_white"
            app:tint="@color/light_red"/>

        <ImageView
            android:id="@+id/profile10_image"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/profile9_image"
            android:src="@drawable/circle_grey_home" />

        <ImageView
            android:id="@+id/profile11_image"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/profile10_image"
            android:src="@drawable/circle_grey_home" />

        <ImageView
            android:id="@+id/profile8_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="230dp"
            android:layout_toEndOf="@id/profile7_image"
            android:src="@drawable/intro_introduction" />
    </RelativeLayout>

    <!-- below_dots -->

    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/circle_white"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/profile13_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/intro_introduction" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
