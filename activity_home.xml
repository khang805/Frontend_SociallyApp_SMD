                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="#CCCCCC" />


    <!-- bottom icons row-->

    <!-- Bottom Icons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="center">

        <ImageView
            android:id="@+id/home_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/home_search"
            app:tint="@color/brownish_orange" />

        <ImageView
            android:id="@+id/below_search_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/below_search_search"
            app:tint="@color/brownish_orange" />

        <ImageView
            android:id="@+id/below_plus_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/below_plus_search"
            app:tint="@color/brownish_orange" />

        <ImageView
            android:id="@+id/dil_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/dil_search"
            app:tint="@color/brownish_orange" />

        <ImageView
            android:id="@+id/below_pic_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/below_pic_search"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/below_line_search"
        app:tint="@color/brownish_orange"
        android:adjustViewBounds="true" />

</LinearLayout>