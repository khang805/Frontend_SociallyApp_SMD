<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_red">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="225dp"
        android:background="@drawable/round_corner_rectangle_search"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/photo1_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/time"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="272dp"
        android:layout_height="68dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/Mother_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="75dp"
            android:text="Mother"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/photo_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/Mother_text"
            android:src="@drawable/time" />

    </RelativeLayout>

    <TextView
        android:id="@+id/time1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margintop="75dp"
        android:layout_marginLeft="160dp"
        android:text="04:15"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="130dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/photo2_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/time" />

        <ImageView
            android:id="@+id/photo3_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_toEndOf="@id/photo2_icon"
            android:src="@drawable/time" />

        <ImageView
            android:id="@+id/photo4_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_toEndOf="@id/photo3_icon"
            android:src="@drawable/time" />
    </RelativeLayout>


</LinearLayout>


