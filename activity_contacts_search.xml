<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- First Row of Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:id="@+id/search_container_before"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangle_shape_search">

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/time" />

            <ImageView
                android:id="@+id/circle_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="170dp"
                android:src="@drawable/circle_all" />

            <ImageView
                android:id="@+id/wifi_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="305dp"
                app:tint="@color/black"
                android:src="@drawable/wifi" />

            <ImageView
                android:id="@+id/power_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="320dp"
                app:tint="@color/black"
                android:src="@drawable/power" />

            <ImageView
                android:id="@+id/battery_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="340dp"
                app:tint="@color/black"
                android:src="@drawable/battery" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Second Row of Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:id="@+id/search_container_after"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangle_shape_search">

            <ImageView
                android:id="@+id/time_icon2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                app:tint="@color/light_red"
                android:src="@drawable/time" />

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="7dp"
                android:layout_marginStart="145dp"
                android:text="jacob_w"
                android:textColor="@color/light_red"
                android:textSize="24sp" />
            <ImageView
                android:id="@+id/battery_icon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="340dp"
                app:tint="@color/light_red"
                android:src="@drawable/battery" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <RelativeLayout
            android:id="@+id/search_container"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_shape_search">

            <ImageView
                android:id="@+id/search1_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                app:tint="@color/black"
                android:src="@drawable/search_search" />

            <TextView
                android:id="@+id/search2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/search1_icon"
                android:text="Search"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Chat messages rows (3rd to 8th) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="@drawable/circle_white">

        <!-- Profile Image (Circle) -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/intro_introduction" />

        <!-- Message Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Username -->
            <TextView
                android:id="@+id/username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="joshua!"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Message Text -->
            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have a nice day,                                   .now"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Timestamp -->
        <ImageView
            android:id="@+id/camera5_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            app:tint="@color/light_red"
            android:src="@drawable/camera_signup" />
    </LinearLayout>

    <!-- 4th row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/circle_white">

        <!-- Profile Image (Circle) -->
