                android:text="Thankyou bro,                                        .2h"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Timestamp -->
        <ImageView
            android:id="@+id/camera7_image"
            android:layout_width="30dp"
