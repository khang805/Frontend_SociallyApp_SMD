<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F5F5F5"
        android:padding="16dp">

        <!-- Back arrow on left -->
        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/left_half_arrow_login" />

        <!-- IS circle logo -->
        <TextView
            android:id="@+id/image2_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/image_icon"
            android:layout_marginStart="15dp"
            android:background="@drawable/circle_light_red"
            android:gravity="center"
            android:text="IS"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <!-- Internshala text -->
        <TextView
            android:id="@+id/image3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/image2_text"
            android:layout_marginStart="10dp"
            android:text="Internshala"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Right side icons -->
        <ImageView
            android:id="@+id/image4_text"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/left_half_arrow_login" />

        <ImageView
            android:id="@+id/image5_text"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/image4_text"
            android:layout_marginEnd="15dp"
            android:src="@drawable/left_half_arrow_login" />

    </RelativeLayout>

    <!-- Main Content Area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- Time display -->
        <TextView
            android:id="@+id/image7_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:gravity="center"
            android:text="4:49 pm"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <!-- Hello button -->
        <TextView
            android:id="@+id/image9_text"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="280dp"
            android:background="@drawable/rectangle_introduction"
            android:gravity="center"
            android:text="Hello"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <!-- Message input area -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rectangle_shape_search"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image10_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_light_red"
                android:src="@drawable/camera_signup" />

            <TextView
                android:id="@+id/image11_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/image10_text"
                android:layout_marginStart="30dp"
                android:text="Message..."
                android:textColor="#6F6666"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/image12_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/image11_text"
                android:src="@drawable/left_half_arrow_login" />

            <ImageView
                android:id="@+id/image13_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/image12_text"
                android:src="@drawable/left_half_arrow_login" />

            <ImageView
                android:id="@+id/image14_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/image13_text"
                android:src="@drawable/left_half_arrow_login" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>